{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ card.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ card.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(card.image) }}" alt="{{ card.title }}" style="width: 100px;"></td>
            </tr>
            <tr>
                <th>Link</th>
                <td><a href="{{ card.link }}">{{ card.link }}</a></td>
            </tr>
            <tr>
                <th>Code Drapeau</th>
                <td>{{ card.codeFlag|raw }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_card_index') }}">back to list</a>

    <a href="{{ path('app_admin_card_edit', {'id': card.id}) }}">edit</a>

    {{ include('admin/admin_card/_delete_form.html.twig') }}
{% endblock %}
