{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/form.css') }}">
{% endblock %}
{% block title %}Cartes{% endblock %}

{% block body %}
    <h1>Cartes</h1>
    <div class="create-new-container">
        <a href="{{ path('app_admin_card_index') }}" class="create-new-link">Retour Ã  la liste</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ card.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ card.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(card.image) }}" alt="{{ card.title }}" style="width: 100px;"></td>
            </tr>
            <tr>
                <th>Link</th>
                <td><a href="{{ card.link }}">{{ card.link }}</a></td>
            </tr>
            <tr>
                <th>Code Drapeau</th>
                <td>{{ card.codeFlag|raw }}</td>
            </tr>
        </tbody>
    </table>
