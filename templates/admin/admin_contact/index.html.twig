{# templates/admin_contact/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Message</th>
                <th>Msg_date</th>
                <th>Email</th>
                <th>Response</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.title }}</td>
                <td>{{ contact.message }}</td>
                <td>{{ contact.msgDate ? contact.msgDate|date('Y-m-d') : '' }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.response }}</td>
                <td>
                    <a href="{{ path('app_admin_contact_response', {'id': contact.id}) }}">Respond</a>
                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}">Show</a>
                    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_contact_new') }}">Create new</a>
{% endblock %}
