{# templates/admin_report/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}UserReport Index{% endblock %}

{% block body %}
    <h1>UserReport Index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reason</th>
                <th>Reported User</th>
                <th>Reporting User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_report in user_reports %}
            <tr>
                <td>{{ user_report.id }}</td>
                <td>{{ user_report.reason }}</td>
                <td>{{ user_report.reportedUser.username }}</td>
                <td>{{ user_report.reportingUser.username }}</td>
                <td>
                    <a href="{{ path('app_admin_report_show', {'id': user_report.id}) }}">Show</a>
                    <a href="{{ path('app_admin_report_edit', {'id': user_report.id}) }}">Edit</a>
                    <form method="post" action="{{ path('app_admin_report_ban', {'id': user_report.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('ban' ~ user_report.id) }}">
                        <button class="btn btn-danger btn-sm">Ban</button>
                    </form>
                    <form method="post" action="{{ path('app_admin_report_archive', {'id': user_report.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ user_report.id) }}">
                        <button class="btn btn-warning btn-sm">Archive</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_report_new') }}">Create new</a>
    <a href="{{ path('app_admin_report_archived') }}" class="btn btn-secondary">View Archived Reports</a>
{% endblock %}
