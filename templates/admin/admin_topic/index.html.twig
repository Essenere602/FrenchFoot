{% extends 'base.html.twig' %}

{% block title %}Topic index{% endblock %}

{% block body %}
    <h1>Topic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Creation_date</th>
                <th>Num_views</th>
                <th>Num_replies</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.id }}</td>
                <td>{{ topic.title }}</td>
                <td>{{ topic.creationDate ? topic.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ topic.numViews }}</td>
                <td>{{ topic.numReplies }}</td>
                <td>
                    <a href="{{ path('app_admin_topic_show', {'id': topic.id}) }}">show</a>
                    <a href="{{ path('app_admin_topic_edit', {'id': topic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_topic_new') }}">Create new</a>
{% endblock %}
