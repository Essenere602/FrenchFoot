{# templates/football/championnat/index.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/card.css') }}">
{% endblock %}

{% block title %}Liste des Championnats{% endblock %}
{% block content %}

{% block body %}
<div class="main-container">
        <div class="card-container">
            {% for card in cards %}
                <div class="card">
                    <img src="{{ asset(card.image) }}" alt="{{ card.title }}">
                    <div class="card-content">
                        <h1 class="oswald">{{ card.title }}</h1>
                        <p class="card-description">{{ card.description }}</p>
                        <a href="{{ card.link }}" class="card-link">En savoir plus</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% endblock %}
