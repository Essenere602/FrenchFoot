{# templates/football/championnat_data/standings.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/standings.css') }}">
{% endblock %}

{% block title %}{{ championnat.ligue }} Standings{% endblock %}

{% block body %}
    <h1 class="standings-title">{{ championnat.ligue }} Standings</h1>
    <div class="standings-container">
        <table class="standings-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Logo</th>  {# Nouvelle colonne pour les logos #}
                    <th>ÉQUIPE</th>
                    <th>PTS</th>
                    <th>J</th>
                    <th>DIF</th>
                    <th>G</th>
                    <th>N</th>
                    <th>D</th>
                    <th>BP</th>
                    <th>BC</th>
                </tr>
            </thead>
            <tbody>
                {% if standings is defined %}
                    {% for team in standings.standings[0].table %}
                        <tr class="{% if team.position <= 4 %}champions-league{% elseif team.position == 5 %}europa-league{% elseif team.position == 6 %}conference-league{% elseif team.position > 17 %}relegation{% endif %}">
                            <td class="position">{{ team.position }}</td>
                            <td class="team-logo"><img src="{{ asset(team.team.logo) }}" alt="Logo de {{ team.team.name }} " class="logo-img"></td>  {# Cellule pour le logo #}
                            <td class="team-name">{{ team.team.name }}</td>
                            <td>{{ team.points }}</td>
                            <td>{{ team.playedGames }}</td>
                            <td>{{ team.goalDifference }}</td>
                            <td>{{ team.won }}</td>
                            <td>{{ team.draw }}</td>
                            <td>{{ team.lost }}</td>
                            <td>{{ team.goalsFor }}</td>
                            <td>{{ team.goalsAgainst }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="11">No standings available</td>  {# Ajusté pour tenir compte de la nouvelle colonne #}
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="legend">
        <p><span class="legend-color champions-league"></span> UEFA Champions League</p>
        <p><span class="legend-color europa-league"></span> UEFA Europa League</p>
        <p><span class="legend-color conference-league"></span> UEFA Conference League Qualifiers</p>
        <p><span class="legend-color relegation"></span> Relegation</p>
    </div>
    
{% endblock %}
