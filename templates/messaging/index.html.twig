{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/conversation.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/autocomplete-user.css') }}">
{% endblock %}
{% block title %}Messagerie{% endblock %}


{% block body %}
    <div class="container">
    <a href="http://127.0.0.1:8000" id="back-button" class="back-button">
        &#8592; Retour
    </a>

        <div class="autocomplete-container">
            <h2>Nouvelle Conversation</h2>
            <input type="text" id="username-autocomplete" placeholder="Rechercher un utilisateur...">
            <div id="autocomplete-results"></div>
        </div>

<h1>Mes Conversations</h1>

<ul>
    {% for conversation in conversations %}
        {% set unreadMessages = unread_messages_for_conversation(conversation) %}
        <li>
            <a href="{{ path('app_message_conversation', {id: conversation.id}) }}" class="conversation-link" data-id="{{ conversation.id }}">
                {% if unreadMessages > 0 %}
                    <span class="notification-dot"></span>
                {% endif %}
                Conversation avec {{ conversation.user1 == app.user ? conversation.user2.username : conversation.user1.username }}
            </a>
            <form action="{{ path('app_message_delete_conversation', {id: conversation.id}) }}" method="post" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conversation.id) }}">
                <button type="submit" class="delete">X</button>
            </form>
        </li>
    {% endfor %}
</ul>

    </div>

    <script>
        document.getElementById('username-autocomplete').addEventListener('input', function() {
            let term = this.value;
            let resultsDiv = document.getElementById('autocomplete-results');
            
            if (term === '') {
                resultsDiv.innerHTML = '';
                return;
            }

            fetch('/user/autocomplete?term=' + encodeURIComponent(term))
                .then(response => response.json())
                .then(data => {
                    resultsDiv.innerHTML = '';

                    data.forEach(user => {
                        let div = document.createElement('div');
                        div.textContent = user.username;
                        div.dataset.userId = user.id;

                        div.addEventListener('click', function() {
                            window.location.href = '/messages/new/' + user.username;
                        });

                        resultsDiv.appendChild(div);
                    });
                });
        });

        // Close autocomplete results when clicking outside
        document.addEventListener('click', function(event) {
            let resultsDiv = document.getElementById('autocomplete-results');
            if (!resultsDiv.contains(event.target) && event.target !== document.getElementById('username-autocomplete')) {
                resultsDiv.innerHTML = '';
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.conversation-link').forEach(function(link) {
        link.addEventListener('click', function(event) {
            const conversationId = this.dataset.id;
            // Faites une requête AJAX pour marquer les messages comme lus
            fetch('/messages/mark-as-read/' + conversationId, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': '{{ csrf_token("mark_as_read") }}' // Assurez-vous d'inclure un token CSRF valide
                }
            }).then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Supprimer le point rouge de la conversation
                    this.querySelector('.notification-dot').style.display = 'none';

                    // Vérifier s'il reste d'autres conversations avec des messages non lus
                    if (document.querySelectorAll('.notification-dot').length === 0) {
                        // Supprimer le point rouge du menu
                        document.querySelector('.navbar .notification-dot').style.display = 'none';
                    }
                }
            }).catch(error => console.error('Erreur lors de la mise à jour des messages:', error));
        });
    });
});

    </script>
{% endblock %}
